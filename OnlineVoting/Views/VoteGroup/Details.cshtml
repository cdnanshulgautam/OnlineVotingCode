@using OnlineVoting.Domain.Entities
@model VoteGroup

@{
    ViewData["Title"] = "Vote Group Details";
}

<h2>Vote Group Details</h2>

<div>
    <h4>@Model.GroupName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.GroupDescription</dd>

        <dt class="col-sm-2">Votes Count</dt>
        <dd class="col-sm-10">@Model.VotesCount</dd>


        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.Symbol" alt="Group Image" style="max-width: 100%; height: auto;"> </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index"  class="btn btn-secondary">Back to List</a>
</div>